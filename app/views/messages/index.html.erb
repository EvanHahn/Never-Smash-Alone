<div class="page-header">
  <%= link_to 'New message', new_message_path, :class => 'btn btn-primary pull-right' %>
  <h1>Messages</h1>
</div>

<table class="table table-striped">
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender.name %>: <%= message.body %></td>
        <td>
          <%= link_to 'Read', with_messages_path(:other_id => message.sender.id), :class => 'btn btn-mini btn-primary' %>
          <%# <% if message.sender != current_user && !message.read? %1> %>
            <%= link_to 'Mark read', read_message_path(message), :method => :put, :class => 'btn btn-mini' %>
          <%# <% end %1> %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
